---
import { education } from '@cv';
import Section from '@/components/Section.astro';
---

<Section title="Education">
	<ul>
		{
			education.map(
				({ institution, url, area, startDate, endDate }) => {
					const startYear = new Date(startDate).getFullYear();
					const endYear =
						endDate != null ? new Date(endDate).getFullYear() : 'Present';

					const dateYear = `${startYear}-${endYear}`;
					return (
						<li>
							<article>
								<header>
									<div>
										<h3>
											<a
												href={`${url}`}
												title={`View company website: ${institution}`}
												target="_blank"
											>
												{institution}
											</a>
										</h3>
									</div>

									<div>
										<time>
											{dateYear}
										</time>
									</div>
								</header>

								<footer>
									<p>{area}</p>
								</footer>
							</article>
						</li>
					);
				},
			)
		}
	</ul>
</Section>

<style>
	ul {
		display: flex;
		flex-direction: column;
		gap: 15px;
	}

	article h3 {
		font-size: 1.0rem;
		font-weight: 500;
		color: #111;
	}

	article a {
		color: #111;
	}

	article a:hover {
		text-decoration: underline;
	}

	article h4 {
		color: #222;
		font-weight: 400;
	}

	header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 4px;
	}

	time {
		color: #555;
		font-size: 0.85rem;
		min-width: 102px;
	}

	@media (width <= 700px) {
		time {
			text-align: right;
		}
	}
</style>
