---
import { skills, languages } from '@cv';
import Section from '@/components/Section.astro';
// Icons
import HTML from '@/assets/icons/HTML.astro';
import CSS from '@/assets/icons/CSS.astro';
import JavaScript from '@/assets/icons/JavaScript.astro';
import TypeScript from '@/assets/icons/TypeScript.astro';
import Tailwindcss from '@/assets/icons/Tailwindcss.astro';
import NodeJS from '@/assets/icons/NodeJS.astro';
import ExpressJS from '@/assets/icons/ExpressJS.astro';
import MySQL from '@/assets/icons/MySQL.astro';
import PostgreSQL from '@/assets/icons/PostgreSQL.astro';
import Git from '@/assets/icons/Git.astro';
import GitHub from '@/assets/icons/GitHub.astro';
import AstroJS from '@/assets/icons/AstroJS.astro';
import ReactJS from '@/assets/icons/ReactJS.astro';
import NextJS from '@/assets/icons/NextJS.astro';

const SkillsIcons: Record<string, any> = {
	HTML,
	CSS,
	JavaScript,
	TypeScript,
	Tailwindcss,
	NodeJS,
	ExpressJS,
	MySQL,
	PostgreSQL,
	Git,
	GitHub,
	AstroJS,
	ReactJS,
	NextJS,
};
---

<Section title="Skills">
	<ul>
		{
			skills.map(({ name }) => {
				const Icon = SkillsIcons[name];

				if (!Icon) return null;
				return (
					<li>
						{Icon && <Icon />} <span>{name}</span>
					</li>
				);
			})
		}
		{
			languages.map(({ language }) => {
				if (!language) return null;
				return (
					<li>
						<span>{language}</span>
					</li>
				);
			})
		}
	</ul>
</Section>

<style>
	ul {
		display: inline-flex;
		gap: 8px;
		flex-wrap: wrap;
	}

	li {
		align-items: center;
		background: #eee;
		border-radius: 6px;
		color: black;
		display: flex;
		font-size: 0.8rem;
		font-weight: 500;
		gap: 4px;
		padding: 0.2rem 0.6rem;
	}
</style>
